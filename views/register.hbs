<center>
    <h1>Sign Up</h1> <br><br><hr>
    <form action="/register" method="POST">
        <div class="form-group row">
            <label for="email" class="col-4 col-form-label">Email</label>
            <div class="col-8">
                <input id="email" name="email" placeholder="your.email@example.com" type="text" class="form-control here" aria-describedby="emailHelpBlock"
                    required="required">
                <span id="emailHelpBlock" class="form-text text-muted">insert your email here.</span>
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-4 col-form-label">Password</label>
            <div class="col-8">
                <input id="password" name="password" placeholder="supersecretp4ssw0rd" type="text" class="form-control here" required="required"
                    aria-describedby="passwordHelpBlock">
                <span id="passwordHelpBlock" class="form-text text-muted">insert your password here.</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-4 col-8">
                <button name="submit" type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</center>